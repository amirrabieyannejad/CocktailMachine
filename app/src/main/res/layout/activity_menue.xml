<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Menue">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="-358dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_margin="30dp"
                android:contentDescription="Show available Cocktails"
                android:onClick="openRecipeList"
                app:srcCompat="@drawable/ic_list" />

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_margin="30dp"
                android:contentDescription="add recipe"
                android:onClick="openRecipeCreator"
                app:srcCompat="@drawable/ic_list_add" />

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_margin="30dp"
                android:contentDescription="FillAnimation"
                android:onClick="openGlassFillAnimationView"
                app:srcCompat="@drawable/ic_list_add" />


            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_margin="30dp"
                android:contentDescription="swipe thing"
                android:onClick="openSingelCocktailView"
                app:srcCompat="@drawable/ic_single_cocktail_choice_2" />

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_margin="30dp"
                android:contentDescription="FindBluetooth"
                android:onClick="openDeviceScan"
                app:srcCompat="@drawable/ic_find_bluetooth" />

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_margin="30dp"
                android:contentDescription="Settings"
                android:onClick="openSettings"
                app:srcCompat="@drawable/ic_options" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="Grafik"
                android:onClick="openGrafik"
                app:srcCompat="@drawable/ic_glass" />

            <ImageView
                android:id="@+id/activity_menue_logout"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_margin="30dp"
                android:contentDescription="Logout"
                android:onClick="logout"
                app:srcCompat="@drawable/ic_logout" />

            <ImageView
                android:id="@+id/activity_menue_login"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_margin="30dp"
                android:contentDescription="Login"
                android:onClick="login"
                app:srcCompat="@drawable/ic_login" />

        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>